<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
            class="BitBag\SyliusAdyenPlugin\Bus\Handler\PaymentFinalizationHandler"
            id="bit_bag.sylius_adyen_plugin.bus.handler.authorize_payment_handler"
        >
            <argument type="service" id="sm.factory"/>
            <argument type="service" id="sylius.manager.order"/>
            <argument type="service" id="sylius.manager.payment"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus"/>
        </service>

        <service
            class="BitBag\SyliusAdyenPlugin\Bus\Handler\PreparePaymentHandler"
            id="bit_bag.sylius_adyen_plugin.bus.handler.prepare_payment_handler"
        >
            <argument type="service" id="sm.factory"/>
            <argument type="service" id="sylius.manager.payment"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus"/>
        </service>

        <service
            class="BitBag\SyliusAdyenPlugin\Resolver\Payment\EventCodeResolver"
            id="bit_bag.sylius_adyen_plugin.resolver.payment.event_code_resolver"
        />

        <service
            class="BitBag\SyliusAdyenPlugin\Bus\PaymentCommandFactory"
            id="bit_bag.sylius_adyen_plugin.bus.payment_command_factory"
        >
            <argument type="service" id="bit_bag.sylius_adyen_plugin.resolver.payment.event_code_resolver"/>
        </service>

        <service
            class="BitBag\SyliusAdyenPlugin\Bus\Dispatcher"
            id="bit_bag.sylius_adyen_plugin.bus.dispatcher"
        >
            <argument type="service" id="sylius.command_bus"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.bus.payment_command_factory"/>
        </service>

        <service
            class="BitBag\SyliusAdyenPlugin\Bus\Handler\TakeOverPaymentHandler"
            id="bit_bag.sylius_adyen_plugin.bus.handler.take_over_payment_handler"
        >

            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius.factory.payment"/>
            <argument type="service" id="sylius.manager.payment"/>
            <argument type="service" id="sylius.manager.order"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus"/>
        </service>

        <service
            class="BitBag\SyliusAdyenPlugin\Bus\Handler\RequestCaptureHandler"
            id="bit_bag.sylius_adyen_plugin.bus.handler.request_capture_handler"
        >
            <argument type="service" id="bit_bag.sylius_adyen_plugin.provider.adyen_client_provider"/>
            <tag name="messenger.message_handler" bus="sylius.command_bus"/>
        </service>

        <service
            class="BitBag\SyliusAdyenPlugin\Bus\Handler\RefundPaymentGeneratedHandler"
            id="bit_bag.sylius_adyen_plugin.bus.handler.refund_payment_generated_handler"
        >

            <argument type="service" id="bit_bag.sylius_adyen_plugin.resolver.payment.refund_reference_resolver"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.provider.adyen_client_provider"/>
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="sylius.repository.payment_method"/>
            <tag name="messenger.message_handler" bus="sylius.event_bus"/>
        </service>

        <service
                class="BitBag\SyliusAdyenPlugin\Bus\Handler\RefundPaymentHandler"
                id="bit_bag.sylius_adyen_plugin.bus.handler.refund_payment_handler"
        >
            <argument type="service" id="SM\Factory\Factory"/>
            <argument type="service" id="sylius_refund.manager.refund_payment"/>

            <tag name="messenger.message_handler" bus="sylius.command_bus"/>
        </service>

    </services>
</container>