<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
                class="BitBag\SyliusAdyenPlugin\Form\Type\ConfigurationType"
                id="bit_bag.sylius_adyen_plugin.form.type.configuration_type"
        >
            <tag name="form.type"/>
            <tag name="sylius.gateway_configuration_type" type="adyen" label="bitbag_sylius_adyen_plugin.ui.ayden_gateway_label"/>
        </service>

        <service
                class="BitBag\SyliusAdyenPlugin\Form\Extension\PaymentTypeExtension"
                id="bit_bag.sylius_adyen_plugin.form.extension.payment_type_extension"
        >
            <argument type="service" id="bit_bag.sylius_adyen_plugin.resolver.order.payment_checkout_order_resolver"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.repository.payment_method"/>
            <argument type="service" id="sylius.context.shopper"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.provider.adyen_client_provider"/>
            <tag name="form.type_extension" />
        </service>

    </services>
</container>