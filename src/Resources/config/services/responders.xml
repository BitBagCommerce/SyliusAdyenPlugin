<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
                class="BitBag\SyliusAdyenPlugin\Controller\Shop\PaymentDetailsAction"
                id="bit_bag.sylius_adyen_plugin.controller.shop.payment_details_action"
        >
            <argument type="service" id="bit_bag.sylius_adyen_plugin.provider.adyen_client_provider"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.resolver.order.payment_checkout_order_resolver"/>
            <argument type="service" id="sm.factory"/>
            <argument type="service" id="router"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.bus.dispatcher"/>

            <tag name="controller.service_arguments"/>
        </service>

        <service
                class="BitBag\SyliusAdyenPlugin\Controller\Shop\PaymentsAction"
                id="bit_bag.sylius_adyen_plugin.controller.shop.payments_action"
        >

            <argument type="service" id="bit_bag.sylius_adyen_plugin.provider.adyen_client_provider"/>
            <argument type="service" id="router"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.resolver.order.payment_checkout_order_resolver"/>
            <argument type="service" id="sylius.unique_id_based_order_token_assigner"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.bus.dispatcher"/>

            <tag name="controller.service_arguments"/>
        </service>

        <service
                class="BitBag\SyliusAdyenPlugin\Controller\Shop\ProcessNotificationsAction"
                id="bit_bag.sylius_adyen_plugin.controller.shop.process_notifications_action"
        >
            <argument type="service" id="bit_bag.sylius_adyen_plugin.provider.adyen_client_provider"/>
            <argument type="service" id="sylius.repository.payment"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.bus.dispatcher"/>
            <argument type="service" id="bit_bag.sylius_adyen_plugin.resolver.payment.payment_notification_resolver"/>

            <tag name="controller.service_arguments"/>
        </service>

        <service
                class="BitBag\SyliusAdyenPlugin\Controller\Shop\RedirectTargetAction"
                id="bit_bag.sylius_adyen_plugin.controller.shop.redirect_target_action"
        >
            <argument type="service" id="bit_bag.sylius_adyen_plugin.provider.adyen_client_provider"/>
            <argument type="service" id="router.default"/>
            <argument type="tagged_locator" tag="bit_bag.sylius_adyen_plugin.action" default-index-method="getHandledEventName"/>
            <argument type="service" id="sylius.repository.payment"/>

            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>